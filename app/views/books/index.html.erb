<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render: partial "layouts/form", locals: {book: @book, user: @user} %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-invarse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
           </thead>
          <% @books.each do |book| %>
          <tbody>
            <tr>
              <td><%= @user.get_profile_image %></td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
            </tr>
          </tbody>
          <% end %>
      </table>
    </div>
  </div>
</div>