<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render "layouts/form", user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
           </thead>
          <% @books.each do |book| %>
          <tbody>
            <tr>
              <td><%= @user.profile_image %></td>
              <td><%= @user.user_name %></td>
              <td><%= link_to 'show', user_path %></td>
            </tr>
          </tbody>
          <% end %>
      </table>
    </div>
  </div>
</div>